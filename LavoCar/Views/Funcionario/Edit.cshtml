@model LavoCar.Models.Funcionario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Funcionário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FuncionarioID" />
            <div class="form-group">
                <label asp-for="NomeFuncionario" class="control-label"></label>
                <input asp-for="NomeFuncionario" class="form-control" />
                <span asp-validation-for="NomeFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndFuncionario" class="control-label"></label>
                <input asp-for="EndFuncionario" class="form-control" />
                <span asp-validation-for="EndFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoneFuncionario" class="control-label"></label>
                <input asp-for="FoneFuncionario" class="form-control" />
                <span asp-validation-for="FoneFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
