@model LavoCar.Models.Recibo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes de Recibo</h1>

<div class="bodyRecibo" id="printable">
    <div class="receipt-main">

        <p class="receipt-title">Recibo</p>
        <div class="assinaturas">
            <div class="receipt-section pull-left">
                <span class="receipt-label text-large">Data:  </span>
                <span class="text-large"> @DateTime.Now</span>
            </div>

            <div class="pull-right receipt-section">
                <span class="text-large receipt-label">R$</span>
                <span class="text-large">@Html.DisplayFor(model => model.TipoLavagem.PrecoTipoLav),00</span>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="receipt-section">
            <span class="receipt-label">Beneficiário:</span>
            <span> @Html.DisplayFor(model => model.Cliente.NomeCliente)</span>
        </div>

        <div class="receipt-section">
            <span class="receipt-label">Veículo:</span>
            <span> @Html.DisplayFor(model => model.Carro.MarcaModelo.DescMarcaModelo)</span>
        </div>

        <div class="receipt-section">
            <span class="receipt-label">Data de Serviço: </span>
            <span> @Html.DisplayFor(model => model.Lavagem.DataLav)</span>
        </div>

        <div class="receipt-section">
            <span class="receipt-label">Cod. de Veículo: </span>
            <span>@Html.DisplayFor(model => model.Carro.CarroID)</span>
        </div>

        <div class="receipt-section">
            <span class="receipt-label">Tipo de Lavagem: </span>
            <span> @Html.DisplayFor(model => model.TipoLavagem.DescTipoLav)</span>
        </div>

        <div class="receipt-section alinharmeio">
            <p>Recebi de LavoCar a importância de R$ @Html.DisplayFor(model => model.TipoLavagem.PrecoTipoLav),00 reais</p>
            <p class="antesDalinha ">Referente a meus serviços profissionais</p>
        </div>

        <div class="receipt-section">
            <p class="pull-right text-large"></p>
        </div>

        <div class="clearfix"></div>
        <div class="assinaturas">
            <div class="receipt-signature col-xs-6">
                <p class="receipt-line"></p>
                <p>Lavo Car Embeleze</p>
                <p>22.254.455/0001-00</p>
                <p>Rua Blablabla, 3456 - Jd. das Cerejeiras</p>
                <p>Aracaju - SE - CEP 09889-349</p>
            </div>

            <div class="receipt-signature col-xs-6">
                <p class="receipt-line"></p>
                <p>Cliente</p>
            </div>
        </div>
    </div>

