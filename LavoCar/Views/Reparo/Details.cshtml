@model LavoCar.Controllers.Reparo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataReparo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataReparo)
        </dd>
        <dt class="col-sm-2">
            Carro/Placa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carro.Placa)
        </dd>
        <dt class="col-sm-2">
            Tipo de Reparo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoReparo.DescTipoReparo)
        </dd>
        <dt class="col-sm-2">
            Valor do Reparo
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.TipoReparo.PrecoTipoReparo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit"  class="btn btn-primary" asp-route-id="@Model.ReparoID">Editar</a> 
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
