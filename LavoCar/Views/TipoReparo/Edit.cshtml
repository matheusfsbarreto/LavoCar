@model LavoCar.Controllers.TipoReparo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar um Tipo de Reparo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoReparoID" />
            <div class="form-group">
                <label asp-for="DescTipoReparo" class="control-label"></label>
                <input asp-for="DescTipoReparo" class="form-control" />
                <span asp-validation-for="DescTipoReparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoTipoReparo" class="control-label"></label>
                <input asp-for="PrecoTipoReparo" class="form-control" />
                <span asp-validation-for="PrecoTipoReparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

