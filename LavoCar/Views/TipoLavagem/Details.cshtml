@model LavoCar.Controllers.TipoLavagem

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes de Lavagem</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescTipoLav)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescTipoLav)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoTipoLav)
        </dt>
        <dd class = "col-sm-10">
           R$ @Html.DisplayFor(model => model.PrecoTipoLav),00
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TipoLavID" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
