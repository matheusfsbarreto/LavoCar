@model LavoCar.Models.MarcaModelo
@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Novo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescMarcaModelo" class="control-label"></label>
                <input asp-for="DescMarcaModelo" class="form-control" />
                <span asp-validation-for="DescMarcaModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
