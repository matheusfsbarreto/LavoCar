@model LavoCar.Controllers.Lavagem

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataLav)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataLav)
        </dd>
        <dt class="col-sm-2">
            Carro/Placa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carro.Placa) 
        </dd>
        <dt class="col-sm-2">
            Tipo de Lavagem
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoLavagem.DescTipoLav)
        </dd>
        <dt class="col-sm-2">
            Valor da Lavagem
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.TipoLavagem.PrecoTipoLav),00
        </dd>
        <dt class="col-sm-2">
            Funcionário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Funcionario.NomeFuncionario)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit"  class="btn btn-primary" asp-route-id="@Model.LavID">Editar</a> 
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
