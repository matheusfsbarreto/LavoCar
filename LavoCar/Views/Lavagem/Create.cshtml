@model LavoCar.Controllers.Lavagem

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Nova Lavagem</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataLav" class="control-label"></label>
                <input asp-for="DataLav" class="form-control" />
                <span asp-validation-for="DataLav" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarroID" class="control-label">Carro</label>
                <select asp-for="CarroID" class="form-control" asp-items="@(new SelectList(ViewBag.Carros, "CarroID", "Placa"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="TipoLavagemID" class="control-label">Tipo de Lavagem</label>
                <select asp-for="TipoLavagemID" class="form-control" asp-items="@(new SelectList(ViewBag.TipoLavagens, "TipoLavID", "DescTipoLav"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="FuncionarioID" class="control-label">Funcionario</label>
                <select asp-for="FuncionarioID" class="form-control" asp-items="@(new SelectList(ViewBag.Funcionarios, "FuncionarioID", "NomeFuncionario"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

